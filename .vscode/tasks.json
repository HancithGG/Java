{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "javac-current-file",
            "type": "shell",
            "command": "javac",
            "args": [
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$javac"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
